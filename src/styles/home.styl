@import 'nib'

h1
  color green
.main-button
  background linear-gradient(left, rgba(73,155,234,1) 0%, rgba(32,124,229,1) 100%)
  width 100px
  height 100px
  margin 10px
  border-radius 50%
  position relative
  box-shadow 0px 0px 45px -7px rgba(0,0,0,0.75)
.child-button
  background linear-gradient(top, rgba(235,233,249,1) 0%, rgba(206,199,236,1) 99%, rgba(193,191,234,1) 100%);
  border-radius 50%
  position absolute
  box-shadow 0px 0px 45px -7px rgba(0,0,0,0.75)
