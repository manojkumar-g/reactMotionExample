@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Gloria+Hallelujah');

body
  background-color #3d6c98
  font-family 'Gloria Hallelujah', cursive;
header
  margin auto
  h1
    font-size 4em
    color white
    position realtive
    box-size border-box


.selected
  text-decoration none
  color black
.todos
  list-style none
  padding-left 0
  color red
.todo,.add
  position relative
  background-color #c4ccd8
  color #172446
  width 100vh
  height 100%
  margin-top 10px
  box-shadow: 0px 0px 28px -4px rgba(8,21,102,1)
.toggle
  position absolute
  margin-left -9999px
  visibility hidden
.toggle + label
  padding 1.5vw
  position relative
  width 5vw
  height 100%
  background-color #172446
.text
  display inline-block
  color red
  span
    color #172446
    position relative
    font-size 6vh
    left 5vw
.icon
  color orangered
  cursor pointer
  position relative
  margin 0px
  transition all 0.5s
  i
    transform rotateX(180deg)
label:before
    content ''
    position absolute
    bottom 6vh
    width 1px
    height 0.75 vh
    background orangered
    transition width 0.5s
.toggle:checked + label:before
    width 75vh
.toggle:checked + label .icon
    margin-left 75vh
    color green
